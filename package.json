        "@types/jsonwebtoken": "^8.5.8",
        "@types/node": "^18.0.0",
        "@types/supertest": "^2.0.12",
        "@types/yup": "^0.29.13",
        "jest": "^28.1.1",
        "mongodb-memory-server": "^8.7.0",
        "nodemon": "^2.0.15",
        "supertest": "^6.2.3",
        "ts-jest": "^28.0.5",
